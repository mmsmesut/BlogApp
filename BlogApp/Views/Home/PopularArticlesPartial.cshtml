@using BlogApp.Data.Models
@model  IEnumerable<BlogApp.Data.Models.Article>

<div class="sidebox widget">
    <h3 class="widget-title section-title">Popüler Makaleler</h3>
    <ul class="post-list">
        @foreach (Article article in Model)
        {
            <li>
                <div class="icon-overlay">
                    <a href="blog-post.html">
                        @if (@article.Image != null)
                        {
                            <img src="@article.Image.SmalSize" alt="" />

                        }
                    </a>
                    </div>
                <div class="meta">
                    <h5><a href="blog-post.html">@article.Header</a></h5>
                    <em>@article.CreateDate.ToShortDateString()<span class="comments">

                    <span>
                        
                        @BlogApp.Helpers.Helper.ShortenContent(article.Content)
                        
                    </span>
                        <a href="#">@article.Comments.Count <i class="icon-chat-1">
                              </i></a></span></em>
                </div>
            </li>
        }
    </ul>
    <!-- /.post-list -->
</div>
